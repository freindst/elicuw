extends ../layout

block content

  .row
    .col-md-12
      .panel.panel-default
        .panel-heading
          h4= title
        panel-body
          table.table.table-striped
            thead
              tr
                th
                th Student ID
                th First Name
                th Last Name
                th Year
                th Semester
                th Term
                th Level
                th Section
                th Teacher Recommendation
                th Timed Writing
                th Grades
                th Interview
                th TOEFL
                th Result
            tbody
              each row in rows
                tr
                  td
                    a.btn.btn-primary.btn-xs(href='/reports/individual/' + row.Semester_id) export
                  td= row.Student_number
                  td= row.First_name
                  td= row.Last_name
                  td= row.Year
                  td= row.Season
                  td= row.Term
                  td= row.Level
                  td= row.Section
                  td= row.Teacher_recommendation
                  td= row.Timed_writing
                  td
                    a(href='reports/grades/#{row.Semester_id}')= row.Grades
                  td= row.Interview
                  td= row.Toefl
                  td= row.Result