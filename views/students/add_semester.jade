extends ../layout

block content
  .row
    .col-md-12
      p Choose a student by add/edit a semester to him/her.
  .row
    .col-md-12
      .panel.panel-default
        .panel-heading
          h4 Student List
        .panel-body
          table.table.table-striped
            thead
              tr
                th Student Number
                th First Name
                th Last Name
                th Major
                th
                th
                th
            tbody
              if students
                each student in students
                  tr
                    td= student.Student_number
                    td= student.First_name
                    td= student.Last_name
                    td= student.Major
                    td
                      a(href='/semesters/get/' + student.Student_id) semester
              else
                tr
                  td Empty
