extends ../layout

block content
  h1 Student Info
  table
    tr
      td Student Number
      td= student.Student_number
    tr
      td First Name
      td= student.First_name
    tr
      td Last name
      td= student.Last_name
    tr
      td Major
      td= student.Major
  
  h1= title
  form(action = '/semesters/edit/' + student.Student_id + '/' + semester.Semester_id method = 'post')
    label(for='Year') Calendar Year:
    input#Year(type='number' name='Year' value= semester.Year)
    br
    label(for='Season') Semster:
    select(name='Season')
      if semester.Season=='spring' 
        option(value='spring' selected='selected') Spring
        option(value='summer') Summer
        option(value='fall') Fall
      else if semester.Season=='summer'
        option(value='spring') Spring
        option(value='summer' selected='selected') Summer
        option(value='fall') Fall
      else if semester.Season='fall'
        option(value='spring') Spring
        option(value='summer') Summer
        option(value='fall' selected='selected') Fall
      else
        option(value='spring') Spring
        option(value='summber') Summer
        option(value='fall') Fall
    br
    label(for='Term') Term:
    select(name='Term')
      if semester.Term=='1'
        option(value='1' selected='selected') 1
        option(value='2') 2
      else
        option(value='1') 1
        option(value='2' selected='selected') 2
    br
    label(for='Level') level
    select(name='Level')
      option(value='Beginning A') Beginning A
      option(value='Beginning B') Beginning B
      option(value='Basic A') Basic A
      option(value='Basic B') Basic B
      option(value='Intemediate A') Intemediate A
      option(value='Intemediate B') Intemediate B
      option(value='Advanced A') Advanced A
      option(value='Advanced B') Advanced B
    br
    label(for='Section') Section
    select(name='Section')
      option(value='0') 0
      option(value='2') 2
      option(value='3') 3
      option(value='4') 4
      option(value='5') 5
      option(value='6') 6
    br
    input(type='submit', value='Update') 