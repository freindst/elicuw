extends ../layout

block content
  h1= title
  table
    tr
      td First Name
      td= result.First_name
    tr
      td Last Name
      td= result.Last_name
    tr
      td Student ID
      td= result.Student_number
    tr
      td School Year
      td= result.Year
    tr
      td Semester
      td= result.Season
    tr
      td Term
      td= result.Term
    tr
      td Level
      td= result.Level
    tr
      td Section
      td= result.Section

  form(action='/webforms/timed_writings/edit/' + result.Semester_id, method='post')
    label Timed Writing Raw Score
    br
    input(type='text' name='Score' value= result.Score)
    br
    input(type='submit' value='Comfirm')
    input(type='button' onclick="window.location.href=\'/verifications/timed_writing\'" value='Cancel')
    input(type='button' onclick="window.location.href=\'/webforms/timed_writings/delete/" + result.Semester_id +"\'" value='Delete')