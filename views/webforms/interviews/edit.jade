extends ../layout

block content
  h1= title
  table
    tr
      td First Name
      td= result.First_name
    tr
      td Last Name
      td= result.Last_name
    tr
      td Student ID
      td= result.Student_number
    tr
      td School Year
      td= result.Year
    tr
      td Semester
      td= result.Season
    tr
      td Term
      td= result.Term
    tr
      td Level
      td= result.Level
    tr
      td Section
      td= result.Section

  form(action='/webforms/interviews/edit/' + result.Semester_id, method='post')
    h2 Speaking Test
    label Speaking-Pronuonciation
    br
    input(type='radio' name='Pronunciation' value='0' checked=result.Pronunciation=='0')
    | 0 Constant pronunciation and stress errors that cause speech to be completely unintelligible.
    br
    input(type='radio' name='Pronunciation' value='1' checked=result.Pronunciation=='1')
    | 1 Frequent pronunciation and stress errors that cause speech to be occasionally unintelligible.
    br
    input(type='radio' name='Pronunciation' value='2' checked=result.Pronunciation=='2')
    | 2 Consistent pronunciation and stress errors but speech is generally intelligible.
    br
    input(type='radio' name='Pronunciation' value='3' checked=result.Pronunciation=='3')
    | 3 Some pronunciation and stress errors but speech is consistently intelligible.
    br
    label Speaking-Fluency
    br
    input(type='radio' name='Fluency' value='0' checked=result.Fluency=='0')
    | 0 Speech is so slow or fragmented that speech is completely unintelligible.
    br
    input(type='radio' name='Fluency' value='1' checked=result.Fluency=='1')
    | 1 Speech is so slow or has so many pauses that speech is occasionally unintelligible.
    br
    input(type='radio' name='Fluency' value='2' checked=result.Fluency=='2')
    | 2 Speech has frequent pauses but is intelligible.
    br
    input(type='radio' name='Fluency' value='3' checked=result.Fluency=='3')
    | 3 Speech has some pauses but is consistently intelligible.
    br
    label Listening-Initial Comprehension
    br
    input(type='radio' name='Comprehension' value='0' checked=result.Comprehension=='0')
    | 0 Student understands 0%-50% of what is initially said.
    br
    input(type='radio' name='Comprehension' value='1' checked=result.Comprehension=='1')
    | 1 Student understands 50% -70% of what is initially said.
    br
    input(type='radio' name='Comprehension' value='2' checked=result.Comprehension=='2')
    | 2 Student understands 70% =-85% of what is initially said.
    br
    input(type='radio' name='Comprehension' value='3' checked=result.Comprehension=='3')
    | 3 Student understands 85% -100% of what is initially said.
    br
    label Listening-Need for Repetition
    br
    input(type='radio' name='Repetition' value='0' checked=result.Repetition=='0')
    | 0 Student needs constant repetition.
    br
    input(type='radio' name='Repetition' value='1' checked=result.Repetition=='1')
    | 1 Student needs significant repetition.
    br
    input(type='radio' name='Repetition' value='2' checked=result.Repetition=='2')
    | 2 Student needs some repetition.
    br
    input(type='radio' name='Repetition' value='3' checked=result.Repetition=='3')
    | 3 Student needs little or no repetition.
    br
    label Comments:
    input(type='text', name='Comments', value= result.Comments)
    br
    label Final Interview Recommendation
    br
    input(type='radio' name='Recommendation' value='0' checked=result.Recommendation=='0')
    | 0 is clearly not ready for academic study.
    br
    input(type='radio' name='Recommendation' value='1' checked=result.Recommendation=='1')
    | 1 may be ready for academic study but will have significant difficulties with listening & speaking tasks.
    br
    input(type='radio' name='Recommendation' value='2' checked=result.Recommendation=='2')
    | 2 is ready for academic study but will have some difficulties with listening and speaking tasks.
    br
    input(type='radio' name='Recommendation' value='3' checked=result.Recommendation=='3')
    | 3 is clearly ready for academic study and will have only minor difficulties with listening and speaking tasks.
    br
    input(type='submit' value='Comfirm')
    input(type='button' onclick="window.location.href=\'/verifications/interview\'" value='Cancel')
    input(type='button' onclick="window.location.href=\'/webforms/interviews/delete/" + result.Semester_id +"\'" value='Delete')