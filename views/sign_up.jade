extends layout

block content
  .container-fluid
    .row
      .col-md-3
      .col-md-6
          h2.text-center User Sign Up
          br
          form.form-horizontal(action='/sign_up' method='post')
            .form-group
              label.col-md-3.control-label(for='username') Username
              .col-md-9
                input#username.form-control(type='text' name='username' placeholder="Username")

            .form-group
              label.col-md-3.control-label(for='password') Password
              .col-md-9
                input#password.form-control(type='password' name='password' placeholder="Password")

            .form-group
              label.col-md-3.control-label(for='re_password') Re-enter Password
              .col-md-9
                input#re_password.form-control(type='password' name='re_password' placeholder="Re-enter Password")

            .form-group
              label.col-md-3.control-label(for='email') E-mail
              .col-md-9
                input#email.form-control(type='email' name='email' placeholder="example@cuw.edu")

            .form-group
              label.col-md-3.control-label(for='user_group') User Group
              .col-md-9
                select#user_group.form-control(name='user_group')
                  option(value='super_user') Student Worker
                  option(value='professor') Professor
                  option(value='interviewer') Interviewer
                  option(value='instructor') Instructor
                  option(value='other') Other

            .form-group
              .col-md-offset-3.col-md-9            
                input.btn.btn-primary.btn-block(type='submit' value="Sign Up")

            div
              p.text-center If you have an account already, you may&nbsp
                a.btn.btn-primary(href='/login') Login
                | &nbspnow.